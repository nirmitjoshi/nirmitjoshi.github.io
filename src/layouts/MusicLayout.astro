---
import BaseLayout from "./BaseLayout.astro";
import defaultImage from "../assets/defaultSiteImg.png";

const { frontmatter } = Astro.props;

const seoProps = {
  title: frontmatter.title || 'Nirmit Joshi | Music',
  description: frontmatter.description || "Nirmit's Music Taste",
  image: frontmatter.image || '/assets/defaultSiteImg.png'
};
---

<BaseLayout gridTemplateRows="1fr" {...seoProps}>
  <section class="posts-md">
    <div class="heading">
      <div>
        <h1>{frontmatter.title}</h1>
      </div>
    </div>
    <div class="content-md markdown-content">
      <slot />
    </div>
  </section>
</BaseLayout>
